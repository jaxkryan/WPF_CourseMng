                </ComboBox>
                <TextBlock Text="Week" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Name="cbxWeek" Width="150" Margin="5" SelectionChanged="cbxWeek_SelectionChanged">
                    
                </ComboBox>
            </StackPanel>
            
